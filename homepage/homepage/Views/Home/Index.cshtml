        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <h6>get coordinates</h6>

                    <span id="info2" style="background-color:bisque"></span>

                    @*個人資料對話方塊*@
                    <button id="toggle2" type="button" class="showHideButton">User</button>
                    <div class="showHide"></div>


                </div>
            </div>
        </div>


        <script>
            //個人資料方塊!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
            $(document).ready(function () {
                $("#toggle2").click(function () {
                    $(".showHide").toggle();
                });
            });

            //地圖
        map.on('click', function (e) {

            document.getElementById('info2').innerHTML =
                // e.point is the x, y coordinates of the mousemove event relative
                // to the top-left corner of the map
                "x: " + e.point.x + "     y: " + parseFloat(e.point.y) +
                '<br />' +
                // e.lngLat is the longitude, latitude geographical position of the event
                "lng: " + parseFloat(e.lngLat.lng) + "     lat:" + parseFloat(e.lngLat.lat);
            console.log(e);

            pop = new mapboxgl.Popup({ closeOnClick: true })
                .setLngLat([e.lngLat.lng, e.lngLat.lat])
                .setHTML('<img src="https://i.imgur.com/dXnjCNM.jpg" alt="Girl in a jacket" width="200" height="100">'
                    + '<button type="submit">submit</button>'
                    + '<button id="post">post</button><p>'
                    + '@Html.Editor("txtLocationName")'
                    + '<div id="demo">show:</div>')
                .addTo(map);
        });

        </script>



        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
