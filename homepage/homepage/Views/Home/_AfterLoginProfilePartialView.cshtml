
@using homepage.ViewModel
@using homepage.Models
@{

    CLoginViewModel memberLogin = (CLoginViewModel)Session[CDictionary.SK_MemberLogin];
    <img id="profile_photo" class="profile_photo" src="@memberLogin.fPhoto_Member" width="80" style="border-radius:10%" />

    <input id="login_id" style="display:none" value="@memberLogin.fId_Member">
    <span>目前身分:</span>
    <span id="active_role_name">@memberLogin.fActiveRoleName_Member</span>
    <span id="role_type" value="1" style="display:none"></span>

    <div id="login_email">@memberLogin.fEmail_Member</div>

    <button id="logoutBtn" style="float:right">登出</button>

    <input type="text" id="active_role" style="display:none" value="@memberLogin.fActiveRoleId_Member">
    <span id="login_name">會員名稱:@memberLogin.fNickName_Member</span>

    <br />
    @Html.ActionLink("編輯個人檔案", "edit", "Member")
    @*<button id="edit_profile" style="float:right" >編輯個人檔案</button><br />*@

    <hr />
    @*<div style="width:1px;background-color:dimgray">---------------</div>*@
    //通知按鈕
    <div id="info_panel" class="info_panel" style="float:right;width: 320px;">
        <ul id="note_list" style="padding-left:20px;width:280px;"></ul>
        <ul id="role_list" style="padding-left:20px;width:280px;"></ul>
    </div>

    <div style="width:10%">

        <div class="noteBtn" style="width:25%">
            <input type="image" id="noteBtn" name="noteBtn" onclick="showNotes()" img src="https://i.imgur.com/r3oeo6a.png" width="50" height="50">
            @if (memberLogin.fNotesCount_Member > 0)
            {
                <span id="noteNum" name="noteNum" class="noteNum">
                    @memberLogin.fNotesCount_Member
                </span>
            }
        </div>
        <br />
        <br />
        @*//點數*@
        <div class="noteBtn">
            @*<a id="login_point" href="javascript:showPoint()">點數: @memberLogin.fPointTotal_Member</a>*@
            <input type="image" id="login_point" name="noteBtn" onclick="showPoint()" img src="https://i.imgur.com/vNsn4vf.png" width="50" height="50">
            <span id="login_point" name="" class="noteNum">
                @memberLogin.fPointTotal_Member
            </span>

        </div>
        <br />
        <br />
        @*<span>點數: @memberLogin.fPointTotal_Member</span>*@
        @*<input type="image" id="noteBtn" name="noteBtn" onclick="showNotes()" img src="https://i.imgur.com/ShdEgwx.png" width="32" height="32">*@

        @*//升級*@

        <input type="image" src="https://i.imgur.com/ZAP32e1.png" width="50" height="50" onclick="location.href='@Url.Action("LvVIP", "Payment")'" value="升級">
        @*//切換身分*@
        <br />
        <br />
        <input type="image" id="change_role" onclick="showRoles()" src="https://i.imgur.com/VbtKDJF.png" width="50" height="50">
        @*<span>切換身分</span>*@

    </div>
    @*<hr />*@

}
