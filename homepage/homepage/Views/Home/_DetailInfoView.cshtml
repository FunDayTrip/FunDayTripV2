        font-size: 0.7rem;
    }

        .comment-date i {
            margin: 0 5px 0 10px;
        }

    .comment-body {
        padding: 0 0 0 5px;
        display: flex;
        font-size: 1rem;
        font-size: 0.8rem;
        font-weight: 100;
        color:black;
    }

    .comment-footer {
        font-size: 0.8rem;
        font-weight: 300;
    }

        .comment-footer span {
            margin: 0 15px 0 0;
        }

            .comment-footer span a {
                margin: 0 0px 0 2px;
            }


            .comment-footer span.comment-likes .active .fa-heart {
                color: black;
                font-size: 1rem;
            }



    .nested-comments {
        margin-left: 30px;
    }
