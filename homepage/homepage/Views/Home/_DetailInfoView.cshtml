            border-radius: 4px;
            box-shadow: none;
        }

    .comment-box-wrapper {
        display: flex;
        flex-direction: column;
        width: 80%;
        margin: 5px 0px;
    }

    .comment-box {
        display: flex;
        width: 80%;
        margin-top: 8px;
    }

        .comment-box a {
            color: #242475;
        }

    .commenter-image {
        height: 40px;
        width: 40px;
        border-radius: 50%;
    }

    .comment-content {
        display: flex;
